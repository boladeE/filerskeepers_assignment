# MongoDB Configuration
# Connection string for MongoDB instance
# For local development with Docker: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URL=mongodb://localhost:27017

# MongoDB database name
MONGODB_DATABASE=books_crawler

# API Configuration
# Secret key for API security (change this in production!)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=your-secret-key-change-in-production

# Rate limit per API key (requests per hour)
API_RATE_LIMIT_PER_HOUR=100

# Crawler Configuration
# Base URL of the website to crawl
BASE_URL=https://books.toscrape.com

# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Initial delay between retries in seconds (uses exponential backoff)
RETRY_DELAY=1.0

# Request timeout in seconds
REQUEST_TIMEOUT=30.0

# Maximum number of concurrent HTTP requests
MAX_CONCURRENT_REQUESTS=10

# Scheduler Configuration
# Timezone for scheduler (e.g., UTC, America/New_York, Europe/London)
SCHEDULER_TIMEZONE=UTC

# Hour of day to run daily change detection (24-hour format, 0-23)
SCHEDULER_DAILY_HOUR=2

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=app.log

